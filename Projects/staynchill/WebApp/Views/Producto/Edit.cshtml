@using WebApp.Helpers;
@{
    ViewBag.Title = "Stay n'Chill | Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/imgsContainers.css" rel="stylesheet" />
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Validation/messages_es.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/servicio_imagen(producto).js"></script>
<script src="~/Scripts/Views/Producto/vProductUpdate.js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Modificar Producto
            </h3>
        </div>
    </div>

    @* Form body *@
    <form class="kt_form_1" id="updateProducto" method="POST">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtName", type: "text", label: "Nombre:", columnDataName: "Name")
                </div>

                <div class="form-group row col-lg-6">
                    @Html.CtrlTextAreaAutosize(id: "kt_autosize_2", label: "Descripción", labelClass: "col-form-label col-lg-3 col-sm-12",
                    textAreaClass: "col-lg-8 col-md-12 col-sm-12", placeHolder: "", columnDataName: "Description")
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlCurrencyInput(id: "txtPrice", type: "text", label: "Precio", placeHolder: "1,000.00", columnDataName: "vPrice", ariaLabel: "Amount (to the nearest dollar)", prepend: "$")
                </div>
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtCantidad", type: "text", label: "Cantidad:", columnDataName: "Cant")
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-4">
                    @Html.CtrlImage(viewName: "vRegisterProducto", id: "image_previewHotel", idButton: "btnUploadProductImage")
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot">
            @Html.CtrlButton(viewName: "vProductUpdate", id: "btnCreate", label: "Modificar", onClickFunction: "Update", buttonType: "btn-primary", type: "submit")
            @Html.CtrlButton(viewName: "vProductUpdate", id: "btnCancelar", label: "Cancelar", onClickFunction: "Cancel", buttonType: "btn-secondary", type: "button")
            @Html.CtrlInputHidden(id: "txtFinalPrice", type: "hidden", label: "", columnDataName: "Price")
            @Html.CtrlInputHidden(id: "txtId", type: "hidden", label: "", columnDataName: "Id")
            @Html.CtrlInputHidden(id: "txtService", type: "hidden", label: "", columnDataName: "Service")
            @Html.CtrlInputHidden(id: "txtImage", type: "hidden", label: "", columnDataName: "Value")
            @Html.CtrlInputHidden(id: "txtState", type: "hidden", label: "", columnDataName: "State")
            @Html.CtrlInputHidden(id: "txtType", type: "hidden", label: "", columnDataName: "Type")
        </div>
    </form>
</div>
<script src="~/assets/js/demo1/pages/crud/forms/widgets/autosize.js"></script>