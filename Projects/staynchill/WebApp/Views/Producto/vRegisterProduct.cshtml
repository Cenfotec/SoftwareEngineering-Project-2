@using WebApp.Helpers;

@{
    ViewBag.Title = "vRegisterService";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Views/Producto/vRegisterProduct.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/servicio_imagen(producto).js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Registro de productos
            </h3>
        </div>
    </div>

    @* Form body *@
    <form class="kt_form_1" id="kt_form_1" action="Create">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtName", type: "text", label: "Nombre:", columnDataName: "Name")
                </div>
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtDescription", type: "text", label: "Descripción:", columnDataName: "Description")
                </div>
                <div class="col-lg-4">
                    <div class="form-group">

                        <label>Subscription</label>

                        <div class="input-group">

                            <div class="input-group-prepend"><span class="input-group-text" id="basic-addon2">$</span></div>

                            <input type="text" class="form-control" placeholder="99.9">

                        </div>

                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.CtrlInput(id: "txtCantidad", type: "text", label: "Cantidad:", columnDataName: "Cantidad")
            </div>
            <div class="form-group">
                @Html.CtrlImage(viewName: "vRegisterService", id: "image_previewHotel", idButton: "btnUploadProductImage")
            </div>
        </div>
    </form>
    @* Form footer *@
    <div class="kt-portlet__foot">
        @Html.CtrlButton(viewName: "vRegisterService", id: "btnCreate", label: "Registrar", onClickFunction: "Create", buttonType: "btn btn-success", type: "button")
    </div>
    @Html.CtrlInputHidden(id: "txtService", type: "hidden", label: "", columnDataName: "Service")
    @Html.CtrlInputHidden(id: "txtImage", type: "hidden", label: "", columnDataName: "Value")
</div>