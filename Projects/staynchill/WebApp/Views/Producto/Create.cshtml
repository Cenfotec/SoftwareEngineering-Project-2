@using WebApp.Helpers;
@{
    ViewBag.Title = "Stay n'Chill | Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/imgsContainers.css" rel="stylesheet" />
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Validation/messages_es.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/servicio_imagen(producto).js"></script>
<script src="~/Scripts/Views/Producto/vRegisterProduct.js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Registro de Producto
            </h3>
        </div>
    </div>

    @* Form body *@
    <form class="kt_form_1" id="registerProducto" method="POST">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtName", type: "text", label: "Nombre:", columnDataName: "Name")
                </div>

                <div class="col-lg-4">
                    <label for="Descripcion">Descripción</label>
                    <textarea class="form-control" id="Descripcion" rows="3" columnDataName="Description"></textarea>
                </div>
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtCantidad", type: "number", label: "Cantidad:", columnDataName: "Cant")
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlCurrencyInput(id: "txtPrice", type: "text", label: "Precio", placeHolder: "1,000.00", columnDataName: "Price", ariaLabel: "Amount (to the nearest dollar)", prepend: "$")
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-4">
                    @Html.CtrlImage(viewName: "vRegisterProducto", id: "image_previewHotel", idButton: "btnUploadProductImage")
                </div>
            </div>
        </div>

        <div class="kt-portlet__foot">
            @Html.CtrlButton(viewName: "vRegisterProduct", id: "btnCreate", label: "Registrar", onClickFunction: "Create", buttonType: "btn btn-primary", type: "submit")
            @Html.CtrlButton(viewName: "vRegisterProduct", id: "btnCancelar", label: "Cancelar", onClickFunction: "Cancel", buttonType: "btn-secondary", type: "button")
        </div>
        @Html.CtrlInputHidden(id: "txtService", type: "hidden", label: "", columnDataName: "Service")
        @Html.CtrlInputHidden(id: "txtImage", type: "hidden", label: "", columnDataName: "Value")
    </form>
</div>
<script src="~/assets/js/demo1/pages/crud/forms/widgets/autosize.js"></script>