@using WebApp.Helpers;
@{
    /**/

    ViewBag.Title = "Stay n'Chill | Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Hotel/Edit.css" rel="stylesheet" />
<script src="~/Scripts/Validation/messages_es.js"></script>
<link href="~/Content/Request/request.css" rel="stylesheet" />
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Views/Hotel/vHotelUpdate.js"></script>
<script src="~/Scripts/Views/SelectProvinces.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/servicio_imagen(hotel).js"></script>
<script type="text/javascript" src='https://maps.google.com/maps/api/js?sensor=false&libraries=places&key=AIzaSyA5YDMnCCgbc-V5PFH98ylidtWtga2TBF0'></script>
<script src="~/Scripts/locationpicker.jquery.js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Modificar Hotel
            </h3>
        </div>
    </div>

    @* Form body *@
    <form class="kt_form_1" id="hotelEdit" method="POST">
        <div class="kt-portlet__body">

            @Html.CtrlInputHidden(id: "txtId", type: "hidden", label: "", columnDataName: "Id")
            @Html.CtrlInputHidden(id: "txtLat", type: "hidden", label: "", columnDataName: "Latitude")
            @Html.CtrlInputHidden(id: "txtLng", type: "hidden", label: "", columnDataName: "Longitude")

            <div class="form-group row">

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtName", type: "text", label: "Nombre:", columnDataName: "Name")
                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtLegalNumber", type: "text", label: "Cédula Jurídica:", columnDataName: "LegalNumber", disabled: "Disabled")
                </div>

                <div class="col-lg-4">
                    <label for="Descripcion">Descripción</label>
                    <textarea class="form-control" id="Descripcion" rows="3" columnDataName="Description"></textarea>
                </div>

            </div>
            <div class="form-group row">

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtBusinessName", type: "text", label: "Nombre de empresa:", columnDataName: "BusinessName", placeHolder: "Opcional")
                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtBusinessChain", type: "text", label: "Nombre de cadena:", columnDataName: "BusinessChain", placeHolder: "Opcional")
                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtEmail", type: "text", label: "Correo electrónico:", columnDataName: "HotelEmail")
                </div>

            </div>
            <div class="form-group row">

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtPhoneNumber", type: "text", label: "Número de teléfono:", columnDataName: "PhoneNumber")
                </div>

                <div class="col-lg-4">
                    @Html.CtrlDropDown(id: "txtStars", pClass: "form-control kt-selectpicker", selectId: "inputStars", optionId: "optionStars", columnDataName: "vStars", label: "Estrellas")
                </div>

                <div class="col-lg-4">
                    <label>Seleccionar ubicación</label>
                    @Html.CtrlMap(viewName: "vRequestIndex", id: "mapaHotel", latitud: "9.9323162", longitud: "-84.0332226")
                </div>

            </div>

            <div class="form-group row">

                <div class="col-lg-4">
                    @Html.CtrlDropDown(id: "txtProvincia", pClass: "form-control kt-selectpicker", selectId: "inputProvincia", optionId: "optionProvincias", columnDataName: "vProvince", label: "Provincia")

                </div>

                <div class="col-lg-4">
                    @Html.CtrlDropDown(id: "txtCanton", pClass: "form-control kt-selectpicker", selectId: "inputCanton", optionId: "optionCantones", columnDataName: "vCanton", label: "Cantón")
                </div>

                <div class="col-lg-4">
                    @Html.CtrlDropDown(id: "txtDistrito", pClass: "form-control kt-selectpicker", selectId: "inputDistrito", optionId: "", columnDataName: "vDistrict", label: "Distrito")

                </div>

            </div>

            <div class="form-group">

                <div class="col-lg-4">
                    @Html.CtrlImage(viewName: "vRequestIndex", id: "image_previewHotel", idButton: "btnSubirImagenHotel")
                </div>
            </div>

            @* Form footer *@

            <div class="kt-portlet__foot">
                @Html.CtrlButton(viewName: "vRequestIndex", id: "btnCreate", label: "Actualizar", onClickFunction: "Create", buttonType: "btn-primary", type: "submit")
                @Html.CtrlButton(viewName: "vHotelUpdate", id: "btnCancelar", label: "Cancelar", onClickFunction: "Cancel", buttonType: "btn-secondary", type: "button")
            </div>

            @Html.CtrlInputHidden(id: "txtValue", type: "hidden", label: "", columnDataName: "Value")

        </div>

        @Html.CtrlInputHidden(id: "txtEmailUser", type: "hidden", label: "", columnDataName: "Email")
        @Html.CtrlInputHidden(id: "txtMonthlySales", type: "hidden", label: "", columnDataName: "MonthlySales")
        @Html.CtrlInputHidden(id: "txtDailySales", type: "hidden", label: "", columnDataName: "DailySales")
        @Html.CtrlInputHidden(id: "txtHProvincia", type: "hidden", label: "", columnDataName: "Province")
        @Html.CtrlInputHidden(id: "txtHCanton", type: "hidden", label: "", columnDataName: "Canton")
        @Html.CtrlInputHidden(id: "txtHDistrito", type: "hidden", label: "", columnDataName: "District")
        @Html.CtrlInputHidden(id: "txtStars", type: "hidden", label: "", columnDataName: "Stars")
        @Html.CtrlInputHidden(id: "txtHLat", type: "hidden", label: "", columnDataName: "vLongitude")
        @Html.CtrlInputHidden(id: "txtHLong", type: "hidden", label: "", columnDataName: "vLatitude")

    </form>

</div>

<script src="~/Scripts/loadSelect.js"></script>