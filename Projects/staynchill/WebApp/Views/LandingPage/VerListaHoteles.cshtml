@using WebApp.Helpers;
@using WebApp.Models.ViewModels;

@{
    var user = Session["user"] as UserViewModel;
}

@if (user == null)
{
    <script>
        localStorage.removeItem('_userLogged');
    </script>
}

@{
    ViewBag.Title = "Stay n'Chill | Hoteles";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<link href="~/Content/Hoteles/Hoteles.css" rel="stylesheet" />
<link href="~/Content/imgsContainers.css" rel="stylesheet" />
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Validation/messages_es.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/Views/LandingPage/vLandingPageIndex.js"></script>
<script src="~/Scripts/Views/Hoteles/vVerHotelesIndex.js"></script>
<script src="~/assets/js/demo1/pages/crud/forms/widgets/bootstrap-daterangepicker.js"></script>


<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor pt-0" id="kt_content">



    <!-- end:: Subheader -->
    <!-- begin:: Content -->
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">


        <div class="row justify-content-center">

            <div class="col-xl-8 col-lg-6 order-lg-1 order-xl-1">

                <!--Begin::Portlet-->
                <div class="kt-portlet" style="border-radius: 15px;overflow:hidden;">



                    <div class="kt-portlet__body p-0">

                        <div id="hotelIMG" class="row">
                            <div class="col" style="width:100%;height:400px;">
                                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" style="width:100%;height:400px;">
                                    <div class="carousel-inner" id="carousel" style="width:100%;height:400px;">
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col text-left">
                                <div class="m-4 pr-2" style="border-bottom: 1px solid #DFE0E6;">
                                    <div>
                                        <h2 id="snc__hotel_name" class="m-0" style="color:#171820;"></h2>
                                    </div>
                                    <div id="snc__hotel_stars" class="mb-3"></div>
                                </div>

                                <div class="m-4 pr-2">
                                    <div>
                                        <p id="snc__hotel_description" class="text-justify"></p>
                                    </div>
                                </div>

                                <div class="m-4 pr-2" style="border-bottom: 1px solid #DFE0E6;">
                                    <div>
                                        <span id="snc__hotel_contact" class="p-2 rounded" style="color: #5D78FF;background-color:#EEF1FF;"><i class="flaticon2-new-email mr-1"></i></span>
                                    </div>
                                    <div class=" mt-4 mb-4">
                                        <span id="snc__hotel_location" class="p-2 rounded" style="color: #0ABB87;background-color:#E6F8F3;"><i class="flaticon2-placeholder mr-1"></i></span>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>



                </div>

                <div class="kt-portlet snc__kt-portlet">
                    <div id="parentHabitacionesCards" class="kt-container kt-container--fluid kt-grid__item kt-grid__item--fluid d-inline-block">

                    </div>
                </div>




                <!--End::Portlet-->



            </div>
        </div>
    </div>
    <!-- end:: Content -->
</div>


<link href="~/Content/GeneralMain/Main.css" rel="stylesheet" />
