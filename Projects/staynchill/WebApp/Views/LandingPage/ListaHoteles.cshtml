@using WebApp.Helpers;
@{
    ViewBag.Title = "Stay n'Chill | Hoteles";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<link href="~/Content/Hoteles/Hoteles.css" rel="stylesheet" />
<link href="~/Content/imgsContainers.css" rel="stylesheet" />
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Validation/messages_es.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDVs9sDZEgrB57DDIfNck8ngmTxNFuD1Fw&libraries=places&language=es" type="text/javascript"></script>
<script src="~/Scripts/Views/Hoteles/vHotelesIndex.js"></script>
<script src="~/assets/js/demo1/pages/crud/forms/widgets/bootstrap-daterangepicker.js"></script>


<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor pt-0" id="kt_content">
    
    @* Search Bar *@
    <div class="text-center snc__search-bar">

        <div class="row">
            <div class="col snc__search_div">
                @Html.CtrlInputIconClass(viewName: "", id: "txtHotelName", inputClass: "snc__search_input", inputType: "text", placeholder: "Ingrese el hotel", iconClass: "flaticon-search snc__search_icon", attributes: "autocomplete=\"off\"")
            </div>

            <div class="col snc__search_div">
                @Html.CtrlInputIconClass(viewName: "", id: "kt_daterangepicker_1", inputClass: "snc__search_input", inputType: "text", placeholder: "Check in - Check out *", iconClass: "flaticon-calendar-2 snc__search_icon", attributes: "readonly")
            </div>

            <div class="col snc__search_div">
                @Html.CtrlInputIconClass(viewName: "", id: "txtNumPeople", inputClass: "snc__search_input", inputType: "number", placeholder: "Personas *", iconClass: "flaticon-users snc__search_icon")
            </div>

            <div class="col-xl-2 snc__search_div">
                @Html.CtrlButtonNoClass(viewName: "vHotelesIndex", id: "btnBuscar", label: "Buscar", onClickFunction: "Buscar", classParam: "snc__search_button", type: "button")
            </div>
        </div>
        



    </div>
    

    <!-- end:: Subheader -->
    <!-- begin:: Content -->
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

        
        <div class="row justify-content-center">

            <div class="col pt-5 pl-4 text-center" style="position:absolute;">
                @* Map *@
                <div class="text-center snc__gmaps-sm-map" style="background-image: url(https://cdn6.agoda.net/images/MAPS-1213/default/bkg-map-entry.svg);" data-toggle="modal" data-target="#myModal" data-lat='21.03' data-lng='105.85'>
                    @*<span style="color:#171820;font-size:2rem;font-weight:bold;position:absolute;top:20px;transform: translateX(-50%);">Ver</span>*@
                    <h2 class="pt-4" style="color:#171820;">Ver mapa</h2>
                </div>
            </div>

            <div class="col-xl-8 col-lg-6 order-lg-1 order-xl-1">


                <div class="kt-portlet kt-portlet--height-fluid  snc__kt-portlet">


                    <div class="kt-portlet__body">

                        <div class="row p-2">
                            
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog modal-xl" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myModalLabel">Ubicación de hoteles</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 modal_body_map">
                                        <div id="right-panel"></div>
                                            <div id="map"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        @* Hotel List *@
                        <div id="parentHotelesCards" class="kt-container kt-container--fluid  kt-grid__item kt-grid__item--fluid">


                        </div>


                    </div>
                </div>

                <!--End::Portlet-->



            </div>
        </div>
    </div>
    <!-- end:: Content -->
</div>


































