@using WebApp.Helpers;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Views/Membership/vMembershipCreate.js"></script>
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Validation/messages_es.js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Registrar membresía
            </h3>
        </div>
    </div>
    @Html.CtrlPayPalButton("PayPalBtn", "10.00")
    @* Form body *@
    <form class="kt_form_1" id="CreateMembership" method="POST">
        <div class="kt-portlet__body">
            @* Form controls *@
            @Html.CtrlInputIcon(id: "txtPrice", type: "number", label: "Precio *", placeHolder: "0.00", columnDataName: "Price", ariaLabel: "Amount (to the nearest dollar)", prepend: "$")
            @Html.CtrlInput(id: "txtNumberMonths ", type: "number", label: "Cantidad de meses *", placeHolder: "Ingrese cuantos meses es vigente la membresía", columnDataName: "NumberMonths")
        </div>

        @* Form footer *@
        <div class="kt-portlet__foot">
            @Html.CtrlButton(viewName: "vMembershipCreate", id: "btnCreate", label: "Registrar", onClickFunction: "", buttonType: "btn-primary", type: "submit")
        </div>
    </form>
</div>