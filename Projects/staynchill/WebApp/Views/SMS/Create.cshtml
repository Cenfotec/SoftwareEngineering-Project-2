@using WebApp.Helpers;
@{
    /**/

    ViewBag.Title = "Definir notificacion SMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Views/SMS/vSMSCreate.js"></script>
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Validation/messages_es.js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Definir recordatorio SMS
            </h3>
        </div>
    </div>
    @* Form body *@
    <form class="kt-form kt-form--label-right" id="CreateSMS" method="POST">
        <div class="kt-portlet__body">
            <div class="form-group row">
                @Html.CtrlTextAreaAutosize(id: "kt_autosize_2", label: "SMS", labelClass: "col-form-label col-lg-3 col-sm-12", textAreaClass: "col-lg-4 col-md-9 col-sm-12", placeHolder: "Buenas tardes. Este es un recordatorio de parte del hotel HotelEjemplo que en dos dias a las 12 pm inicia la estadia y se habilita el check-in. Atentamente HotelEjemplo.", columnDataName: "Message")
            </div>
        </div>

        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-9 ml-lg-auto">
                        @Html.CtrlButton(viewName: "vSMSCreate", id: "btnCreate", label: "Registrar", buttonType: "btn-primary", type: "submit")
                        @Html.CtrlButton(viewName: "vSMSCreate", id: "btnCancel", label: "Cancelar", buttonType: "btn btn-secondary", onClickFunction: "Cancel", type: "button")
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/assets/js/demo1/pages/crud/forms/widgets/autosize.js"></script>