@using WebApp.Helpers;

@{
    ViewBag.Title = "Tipos de Habitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Views/RoomType/RoomTypeIndex.js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Tipos de habitación
            </h3>
        </div>
    </div>

    @* Table *@
    <div class="kt-portlet__body">
        @* Form controls *@
        @Html.CtrlTable(
           viewName: "RoomTypeIndex",
           id: "Room_type",
           title: "Tipos de haitación",
           columnsTitle: "Nombre,Descripción,Personas,Camas,Mascotas,Precio,Check-in,Check-out,Acciones",
           ColumnsDataName: "Name,Description,AmountPeople,AmountBeds,PetsAllowed,Price,HorarioCheckIn,HorarioCheckOut,Actions",
           onSelectFunction: "BindFieldsCustom",
           colorHeader:"red",
           dataId: "Id"
        )
    </div>

</div>