@using WebApp.Helpers;
@using WebApp.Models.ViewModels;

@{
    var user = Session["user"] as UserViewModel;
}

@if (user == null)
{
    <script>
        localStorage.removeItem('_userLogged');
        location.href = '/dashboard/login';
    </script>
}


@{
    ViewBag.Title = "Stay n'Chill | Hoteles";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<link href="~/Content/Reservation/Reservation.css" rel="stylesheet" />
@*<link href="~/Content/Hoteles/Hoteles.css" rel="stylesheet" />*@
<link href="~/Content/imgsContainers.css" rel="stylesheet" />
<script src="~/Scripts/Views/Reservation/vReservationIndex.js"></script>
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="~/Scripts/Validation/messages_es.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor pt-0" id="kt_content" style="background-image:url(http://getwallpapers.com/wallpaper/full/5/a/c/391924.jpg);background-repeat:no-repeat;background-size:cover;">



    <!-- end:: Subheader -->
    <!-- begin:: Content -->
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">


        <div class="row justify-content-center">

            <div class="col-xl-8 col-lg-6 order-lg-1 order-xl-1">

                <!--Begin::Portlet-->
                <div class="kt-portlet snc__kt-portlet">



                    <div class="kt-portlet__body p-0">
                        <div class="kt-widget28 mt-5">
                            <div class="row kt-widget28__wrapper mt-0 snc__card-shadow">

                                <!-- begin::Tab Content -->
                                <div class="col tab-content snc__tab-content" style="background-color:#FFF;">
                                    <div id="menu11" class="tab-pane active mt-4">
                                        <div class="kt-widget28__tab-items">
                                            <div class="kt-widget28__tab-item">
                                                <span>Hotel</span>
                                                <span id="hotelName"></span>
                                            </div>
                                            <div class="kt-widget28__tab-item">
                                                <span>Tipo de habitación</span>
                                                <span id="roomTypeName"></span>
                                            </div>
                                            <div class="kt-widget28__tab-item">
                                                <span>Número de habitación</span>
                                                <span id="roomNumber"></span>
                                            </div>
                                            <div class="kt-widget28__tab-item">
                                                <span>
                                                    Fecha de check-in
                                                </span>
                                                <span id="startDate"></span>
                                            </div>
                                            <div class="kt-widget28__tab-item">
                                                <span class="">
                                                    Fecha de check-out
                                                </span>
                                                <span id="endDate"></span>
                                            </div>
                                            <div class="kt-widget28__tab-item">
                                                <span>Cantidad de noches</span>
                                                <span id="cantNoches"></span>
                                            </div>
                                            <div class="kt-widget28__tab-item">
                                                <span>Total</span>
                                                <span id="totalPayment"></span>
                                            </div>

                                        </div>
                                    </div>
                                </div>


                                <div class="col tab-content text-center snc__tab-content" style="background:#009cde linear-gradient(167deg, #009cde, #003087 40rem);">

                                    <div>
                                        <h3 class="mt-5" style="color:#FFF;">Pago de Reservación</h3>
                                    </div>
                                    <div class="mt-5 pl-3 pr-3" style="bottom: -25%;position:relative;z-index:1;">
                                        @Html.CtrlPayPalButtonV2("PayPalBtn")
                                    </div>


                                </div>

                                <!-- end::Tab Content -->
                            </div>
                        </div>

                    </div>



                </div>

                <div class="kt-portlet snc__kt-portlet">
                    <div id="parentHabitacionesCards" class="kt-container kt-container--fluid kt-grid__item kt-grid__item--fluid d-inline-block">

                    </div>
                </div>




                <!--End::Portlet-->


            </div>
        </div>
    </div>
    <!-- end:: Content -->
</div>

<link href="~/Content/GeneralMain/Main.css" rel="stylesheet" />
