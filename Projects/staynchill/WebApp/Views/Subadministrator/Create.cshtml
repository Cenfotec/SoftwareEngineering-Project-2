@using WebApp.Helpers;

@{
    ViewBag.Title = "Stay n'Chill | Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Validation/messages_es.js"></script>
<script src="~/Scripts/Views/Subadministrator/vSubadministratorCreate.js"></script>
<script src="~/Scripts/Validation/FormsValidation.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/Views/Subadministrator/servicio_imagen.js"></script>

<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Registrar subadministrador
            </h3>
        </div>
    </div>

    @* Form body *@
    <form class="kt_form_1" id="registrarSubadmin" method="POST">
        <div class="kt-portlet__body">
            @* Form controls *@
            <div class="kt-heading kt-heading--md">Información General</div>
            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtCedula", type: "text", label: "Cédula", columnDataName: "Cedula")

                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtPrimerNombre", type: "text", label: "Primer nombre", columnDataName: "Nombre")

                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtSegundoNombre", type: "text", label: "Segundo nombre", placeHolder: "Opcional", columnDataName: "SegNombre")

                </div>

            </div>

            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtPrimerApellido", type: "text", label: "Primer apellido", columnDataName: "Apellido")

                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtSegundoApellido", type: "text", label: "Segundo apellido", columnDataName: "SegApellido")

                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtTelefono", type: "text", label: "Teléfono", columnDataName: "Telefono")
                </div>
            </div>

            <div class="form-group row">

            </div>

            <div class="kt-heading kt-heading--md">Ubicación</div>
            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlDropDown(id: "txtProvincia", pClass: "form-control kt-selectpicker", selectId: "inputProvincia", optionId: "optionProvincias", columnDataName: "vProvincia", label: "Provincia")
                </div>
                <div class="col-lg-4">
                    @Html.CtrlDropDown(id: "txtCanton", pClass: "form-control kt-selectpicker", selectId: "inputCanton", optionId: "optionCantones", columnDataName: "vCanton", label: "Cantón")
                </div>
                <div class="col-lg-4">
                    @Html.CtrlDropDown(id: "txtDistrito", pClass: "form-control kt-selectpicker", selectId: "inputDistrito", optionId: "", columnDataName: "vDistrito", label: "Distrito")
                </div>
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtDireccion", type: "text", label: "Dirección", columnDataName: "Direccion")

                </div>
            </div>

            <div class="kt-heading kt-heading--md">Credenciales</div>
            <div class="form-group row">
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtEmail", type: "email", label: "Email *", placeHolder: "Ingrese su correo electrónico", columnDataName: "Correo")
                </div>
                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtContrasenna", type: "password", label: "Contraseña", columnDataName: "Contrasenna")
                </div>

                <div class="col-lg-4">
                    @Html.CtrlInput(id: "txtCContrasenna", type: "password", label: "Confirmación de contraseña", columnDataName: "CContrasenna")
                </div>
            </div>

            <div>
                <figure class="image_holder">
                    <img src="" alt="" id="image_preview" style="width:300px;height:300px;border-radius:5px;">
                </figure>
                <button type="button" id="btnSeleccionarImagen" class="btn btn-secondary btn-hover-brand">
                    <span class="glyphicon glyphicon-cloud-upload"></span> Subir foto de perfil<span></span>
                </button>
            </div>
        </div>

        @* Form footer *@
        <div class="kt-portlet__foot">
            @Html.CtrlButton(viewName: "vSubadministratorCreate", id: "btnCreate", label: "Registrar", onClickFunction: "getCorreo", buttonType: "btn-primary", type: "submit")
            @Html.CtrlInput(id: "txtHiddenProvincia", type: "hidden", label: "", columnDataName: "Provincia")
            @Html.CtrlInput(id: "txtHiddenCanton", type: "hidden", label: "", columnDataName: "Canton")
            @Html.CtrlInput(id: "txtHiddenDistrito", type: "hidden", label: "", columnDataName: "Distrito")
        </div>
    </form>
</div>

<script src="~/Scripts/Views/Subadministrator/loadSelect.js"></script>